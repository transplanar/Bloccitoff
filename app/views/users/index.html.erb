<h1>All Users</h1>

<div class = "row">
  <div class="col-md-8">
    <% index = 1  %>
    <% @users.each do |user|  %>
    <div class ="media">
      <div class="media-body">
        <h4 class="media-heading"><%= index %>. <%= link_to user.email, user_path(user) %></h4> <small><%= user.items.count %> Tasks</small>
      </div>
    </div>
    <% index = index +1  %>
    <% end %>
  </div>
</div>
